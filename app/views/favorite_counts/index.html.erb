<div class="routes-wrapper">
  <div class="route-contents">
    <div class="posts-wrapper">
      <p class="what-kind">HOT SPOT一覧</p>
    </div>
    <% @favorite_counts.each do |fc|%>
      <% if fc.count > 0 %>
      <%= link_to post_path(fc.post_id) do %>
      <div class="posts">
        <div class= "post">
          <div class="content">
            <p class="content-name favorite-count">お気に入り登録数</p>
            <%= fc.count %>
          </div>
          <div class="content">
            <p class="content-name">title</p>
            <%= fc.post.title %>
          </div>
          <div class="content">
            <p class="content-name">area</p>
            <%= fc.post.prefecture.name %>
            <%= fc.post.city %>
          </div>
        </div>
        <div class="content">
          <p class="content-name">with</p>
          <%= fc.post.member.name %>
        </div>
        <div class="post-nickname">
          <%= link_to "by  #{fc.post.user.nickname}", "/users/#{fc.post.user_id}/show", class:"post-nickname" %>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
  <% end %>
</div>
</div>